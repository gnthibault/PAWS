{% extends "site/base.hbs" %}
{% block content %}
    <div class="row equal">
        <div class="col-xs-12 col-sm-12 col-md-4">
            {% module WeatherInfo("weather_info.hbs") %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
            {% module SystemInfo() %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 img_refresh">
            {% module StateInfo() %}
        </div>
    </div>
    <div class="row equal">
        <div class="col-xs-12 col-sm-12 col-md-4">
            {% module MountInfo() %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
            {% module ObservationInfo() %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 img_refresh">
            {% module GuideInfo("guiding_info.hbs") %}
        </div>
    </div>
    <div class="row equal">
        <div class="col-xs-12 col-sm-12 col-md-4 img_refresh">
            {% module Image('/static/images/latest.jpg', 'latest_img', 'Latest Image') %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8 img_refresh">
            {% module Image('/static/images/latest_focus.jpg', 'latest_focus', 'Latest focus') %}
        </div>
    </div>
    <div class="row equal">
        <div class="col-xs-12 col-sm-12 col-md-4">
            {% module BotChat() %}
        </div>
    </div>
    <div class="row equal hidden" id='polar_align_area'>
        <div class="col-xs-12 col-sm-12 col-md-12">
            {% module PolarAlign() %}
        </div>
    </div>
{% end %}
